{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Koch",
  "version": "1.3.0",
  "identifier": "com.xiaokang.koch",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Koch - Morse Code Trainer",
        "width": 800,
        "height": 360,
        "center": true,
        "resizable": false,
        "fullscreen": false,
        "shadow": false,
        "decorations": false,
        "visible": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
